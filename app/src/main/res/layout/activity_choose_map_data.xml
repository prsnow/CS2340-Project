<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.pavyl.pavyl.controller.ChooseMapData">

    <Button
        android:id="@+id/button_go_to_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go To Map"
        android:onClick="onGoToMapPressed"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="82dp"
        android:layout_marginRight="142dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/start_month"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="376dp"
        android:layout_marginLeft="63dp"
        android:ems="10"
        android:hint="MM"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/start_day"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="374dp"
        android:layout_marginRight="181dp"
        android:ems="10"
        android:hint="DD"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/start_year"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="375dp"
        android:layout_marginRight="105dp"
        android:hint="YYYY"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/end_month"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="279dp"
        android:layout_marginLeft="63dp"
        android:ems="10"
        android:hint="MM"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/end_day"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="278dp"
        android:layout_marginLeft="143dp"
        android:ems="10"
        android:hint="DD"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/end_year"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="278dp"
        android:layout_marginRight="105dp"
        android:ems="10"
        android:hint="YYYY"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
